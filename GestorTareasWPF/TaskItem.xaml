<UserControl x:Class="GestorTareasWPF.TaskItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="280" Margin="0,0,0,10">

    <Border Background="White" CornerRadius="8" Margin="5" BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.1" Color="Black"/>
        </Border.Effect>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Background="#3b82f6" CornerRadius="8,0,0,8"/>

            <StackPanel Grid.Column="1" Margin="12">
                <TextBlock x:Name="lblTitulo" 
                           Text="Título de la tarea" 
                           FontWeight="Bold" 
                           FontSize="15" 
                           Foreground="#1F2937" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,5"/>

                <TextBlock x:Name="lblDesc" 
                           Text="Descripción corta..." 
                           Foreground="#6B7280" 
                           FontSize="13"
                           TextWrapping="Wrap" 
                           MaxHeight="60" 
                           TextTrimming="CharacterEllipsis"
                           Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="EDITAR" Click="BtnEditar_Click" 
                            FontSize="10" FontWeight="Bold" Foreground="#4B5563" Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,5,0"/>

                    <Button Content="ELIMINAR" Click="BtnEliminar_Click" 
                            FontSize="10" FontWeight="Bold" Foreground="#EF4444" Background="Transparent" BorderThickness="0" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>