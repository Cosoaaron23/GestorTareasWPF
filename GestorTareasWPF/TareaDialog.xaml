<Window x:Class="GestorTareasWPF.TareaDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Tarea" 
        Width="400"
        SizeToContent="Height"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" 
        Background="#FAFAFA">

    <Border Padding="20,20,20,30">
        <StackPanel>
            <TextBlock Text="Información de la Tarea" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" HorizontalAlignment="Center"/>

            <TextBlock Text="ID de Tarea:" FontWeight="SemiBold" Foreground="#777"/>
            <TextBox x:Name="txtId" 
                     Margin="0,5,0,15" 
                     Padding="5" 
                     Background="#EFEFEF" 
                     Foreground="#555"
                     IsReadOnly="True"
                     BorderBrush="#CCC"/>

            <TextBlock Text="Título:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtTitulo" Margin="0,5,0,10" Padding="5"/>

            <TextBlock Text="Descripción:" FontWeight="SemiBold"/>
            <TextBox x:Name="txtDesc" Margin="0,5,0,10" Padding="5" Height="80" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

            <TextBlock Text="Estado / Columna:" FontWeight="SemiBold"/>
            <ComboBox x:Name="cmbEstado" Margin="0,5,0,25" Padding="5">
            </ComboBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar" IsCancel="True" Width="90" Margin="0,0,10,0" Padding="5"/>
                <Button Content="Guardar" Click="BtnGuardar_Click" Width="90" Padding="5" Background="#2196F3" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>